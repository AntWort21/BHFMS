@startuml
left to right direction

rectangle BHFMS {
    ' General'
    usecase (Chat) as cht
    usecase (Login) as lgn
    usecase (Register) as rgs
    usecase (Edit Profile) as edt_profile

    ' Manager'
    usecase (View Complains) as view_cmpln
    usecase (Change Complain Status) as chng_cmpln
    usecase (View All Tenant) as view_tenant
    usecase (Tenant Request) as accept_tenant
    usecase (View Boarding House Own) as view_bh_own
    usecase (View Boarding House Detail) as show_bh

    ' Boarding House Owner'
    usecase (Request New Boarding) as req_bh
    usecase (Reapprove New Boarding) as reapv_bh
    usecase (Disable Boarding) as dis_bh
    usecase (Enable Boarding) as enb_bh
    usecase (Edit Boarding House) as edit_bh

    ' Tenant'
    usecase (Rent Boarding House) as rent_bh
    usecase (End Rent Boarding House) as end_rent_bh
    usecase (Wishlist Boarding House) as wish_bh
    usecase (Search Boarding House) as search_bh
    usecase (Pay Rent) as rpymnt
    usecase (Make Complain) as cmpln
    usecase (Make Review) as mk_rvw
    usecase (View Review) as vw_rvw
    usecase (Update Review) as update_rvw
    usecase (View All Boarding House History) as show_bh_all
    usecase (View Boarding House Detail Tenant) as show_bh_detail

    ' Supervisor / Admin'
    usecase (View All Boarding House List) as show_bh_admin
    usecase (Ban Boarding House) as del_bh_admin
    usecase (Edit Boarding House) as edit_bh_admin
    usecase (Approve Boarding House Creation) as aprv_bh_admin
    usecase (View Boarding House Detail) as view_bh

    usecase (View All Facility Details) as show_fcl_admin 
    usecase (Delete Facility Details) as del_fcl_admin
    usecase (Edit Facility Details) as edit_fcl_admin
    usecase (Add Facility Details) as aprv_fcl_admin
    
    usecase (View All User) as show_user_admin 
    usecase (Ban User) as del_user_admin
    usecase (Edit User) as edit_user_admin
    usecase (View User Detail) as view_user_admin

    usecase (View All Boarding Types) as show_btyp_admin 
    usecase (Delete Boarding Types) as del_btyp_admin
    usecase (Edit Boarding Types) as edit_btyp_admin
    usecase (Add Boarding Types) as aprv_btyp_admin

    usecase (View All Complain Types) as show_ctyp_admin 
    usecase (Delete Complain Types) as del_ctyp_admin
    usecase (Edit Complain Types) as edit_ctyp_admin
    usecase (Add Complain Types) as aprv_ctyp_admin

    usecase (View All Payment Methods) as show_pymtd_admin 
    usecase (Delete Payment Methods) as del_pymtd_admin
    usecase (Edit Payment Methods) as edit_pymtd_admin
    usecase (Add Payment Methods) as aprv_pymtd_admin

    usecase (View All Transaction Types) as show_ttyp_admin 
    usecase (Delete Transaction Types) as del_ttyp_admin
    usecase (Edit Transaction Types) as edit_ttyp_admin
    usecase (Add Transaction Types) as aprv_ttyp_admin
    
    usecase (View All Payment History) as view_payment
    usecase (Accept Payment) as accpt_payment
}

